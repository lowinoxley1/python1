#include <iostream>
using namespace std;

int main() {
    int arr[] = {1, -3, 5, 0, -7, 0, 9};
    int positive = 0, negative = 0, zeros = 0;

    for (int num : arr) {
        if (num > 0)
            positive++;
        else if (num < 0)
            negative++;
        else
            zeros++;
    }

    cout << "正数: " << positive << ", 负数: " << negative << ", 零: " << zeros << endl;
    return 0;
}
