
def mountain_peak():
    print("You reach the mountain peak and spot something shiny.")
    print("1. Investigate the shiny object.")
    print("2. Enjoy the view and rest.")
    choice = input("Enter 1 or 2: ")
    if choice == '1':
        print("You discover a legendary sword!")
    else:
        print("You feel refreshed and ready to continue your journey.")
